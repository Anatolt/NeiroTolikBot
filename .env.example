# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Discord Bot Token
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_TEST_BOT_TOKEN=your_separate_test_discord_bot_token_here
DISCORD_TEST_GUILD_ID=123456789012345678
DISCORD_TEST_CHANNEL_ID=123456789012345678
VOICE_RECEIVER_BACKEND=pycord
# Optional sidecar listener backend (discord.py + voice_recv)
# Use with: docker compose --profile voice-recv up -d voice_recv_worker
DISCORD_VOICE_RECV_TOKEN=
DISCORD_VOICE_RECV_GUILD_ID=
DISCORD_VOICE_RECV_CHANNEL_ID=
VOICE_RECV_CHUNK_SECONDS=4

# OpenRouter API Key
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenClaw OAuth backend for text generation (optional alternative to OpenRouter)
OPENCLAW_OAUTH_ENABLED=0
OPENCLAW_BASE_URL=https://de.hohohosting.ru:18789
OPENCLAW_GATEWAY_TOKEN=your_openclaw_gateway_token_here
OPENCLAW_MODEL=openclaw:main
OPENCLAW_TIMEOUT_SECONDS=120
OPENCLAW_VERIFY_SSL=1

# PiAPI.ai API Key (for image generation)
PIAPI_KEY=your_piapi_api_key_here

# OpenAI API Key (for speech-to-text)
OPENAI_API_KEY=your_openai_api_key_here

# Local Whisper endpoint (optional)
VOICE_LOCAL_WHISPER_URL=http://127.0.0.1:8000/transcribe
TTS_MODEL=gpt-4o-mini-tts
TTS_VOICE=alloy

# Custom System Prompt (optional)
# If not set, default will be used: "You are a helpful assistant."
# Optionally point to a file: CUSTOM_SYSTEM_PROMPT_FILE=neiro-tolik-promt.txt
CUSTOM_SYSTEM_PROMPT=your_custom_system_prompt_here 

# Mini App settings
# Public HTTPS URL that Telegram will open (example: https://your-domain/miniapp/)
MINI_APP_URL=
# Internal bind port for mini_app_server.py
MINI_APP_PORT=8080
# Optional custom session secret for Mini App tokens
MINI_APP_SESSION_SECRET=
